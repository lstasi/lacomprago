<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.LaCompraGo">
        
        <!-- Main Activity - Token Input -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Product List Activity -->
        <activity
            android:name=".ui.ProductListActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity" />
        
        <!-- Order List Activity -->
        <activity
            android:name=".ui.OrderListActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity" />
        
        <!-- Recommendations Activity -->
        <activity
            android:name=".ui.RecommendationsActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:label="@string/recommendations_title" />
        
        <!-- Debug Activity - Only accessible in debug builds -->
        <activity
            android:name=".ui.debug.DebugActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:label="@string/debug_title" />
    </application>

</manifest>
